{
  "name": "khatwa",
  "version": "0.1.0",
  "main": "dist-electron/main.js",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:electron": "concurrently -k \"pnpm dev\" \"pnpm electron:watch\" \"pnpm electron:dev\"",
    "build": "next build",
    "build:electron": "cross-env ELECTRON_BUILD=1 NEXT_OUTPUT=export next build && pnpm electron:build",
    "package:mac": "pnpm build:electron && electron-builder --mac",
    "start": "next start",
    "start:electron": "electron dist-electron/main.js",
    "electron:build": "tsup",
    "electron:watch": "tsup --watch",
    "electron:dev": "cross-env ELECTRON_DEV=1 ELECTRON_START_URL=http://localhost:3000 wait-on http://localhost:3000 dist-electron/main.js && electron dist-electron/main.js",
    "lint": "eslint"
  },
  "dependencies": {
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@tiptap/extension-link": "^3.15.3",
    "@tiptap/extension-placeholder": "^3.15.3",
    "@tiptap/extension-underline": "^3.15.3",
    "@tiptap/pm": "^3.15.3",
    "@tiptap/react": "^3.15.3",
    "@tiptap/starter-kit": "^3.15.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dexie": "^4.2.1",
    "lucide-react": "^0.562.0",
    "next": "16.1.3",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.4.0",
    "eslint": "^9",
    "eslint-config-next": "16.1.3",
    "inliner": "^1.13.1",
    "tailwindcss": "^4",
    "tsup": "^8.5.1",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.khatwa.app",
    "productName": "Khatwa",
    "files": [
      "dist-electron/**",
      "out/**",
      "!node_modules",
      "!**/*.map"
    ],
    "mac": {
      "target": "dir",
      "category": "public.app-category.productivity"
    }
  }
}
